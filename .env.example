# CodeWeaver Environment Configuration

# Application Settings
PORT=5000
APP_BASE_URL=http://localhost:5000
NODE_ENV=development


# GitHub OAuth Application
# Create at https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# AI Service API Keys
# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=your_org_id

# Alternative AI Provider (Optional)
# GROQ_API_KEY=your_groq_api_key

# Database Configuration
# MongoDB Atlas - Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=your_mongodb_connection_string

# Session Security
# Generate a secure random string (min 32 characters)
SESSION_SECRET=your_secure_session_secret

# Development Server Configuration
VITE_DEV_SERVER_PORT=5173
VITE_API_SERVER_PORT=5000

# Multi-Agent Framework Configuration
# Port for the Python backend server
AGENT_SERVER_PORT=8000
# Optional: Custom model configurations
# MODEL_NAME=gpt-4
# MAX_TOKENS=2048
# TEMPERATURE=0.7